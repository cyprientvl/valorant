{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!{% endblock %}

{% block body %}
<main class="main-title-detail">
    <h2 class="title">
        {% if type == 'playerTitle' %}
            <p>PLAYER TITLE</p>
        {% elseif type == 'playerCard' %}
            <p>PLAYER CARD</p>
        {% elseif type == 'spray' %}
            <p>SPRAY</p>
        {% endif %}
    </h2>

   

     <div class="choice" style="gap: 30px; align-items: center;">
            <p>SKINS</p>
            {% if isMyLocker  %}

                {{ form_start(formUpdate) }}
                    <button type="submit" class="locker-form" style="padding-top: 0px">
                        <div>
                            <a>
                                <p>
                                    <span class="bg"></span>
                                    <span class="base"></span>
                                    <span class="text">{{item.getIsMainItemType() ? 'Enlever du premier plan' : 'Mettre au premier plan'}}</span>
                                </p>
                            </a>
                        </div>
                    </button>
                {{ form_end(formUpdate) }}
            {% endif %}
                
            
        </div>
    
    <div class="img-skin">
        <img src="{{item.getItem().getDisplayIcon()}}" style="max-width: 250px">
    </div>

    <div class="skin-bottom">
           

            <p class="skin-title">{{item.getItem().getDisplayName()}}</p>
            {% if isMyLocker  %}
                <div class="locker-form" style="justify-content: end">
                    <div>
                        <a href="/locker/{{lockerId}}/delete/{{lockerItemId}}">
                        <p>
                            <span class="bg"></span>
                            <span class="base"></span>
                            <span class="text">REMOVE SKIN</span>
                        </p>
                        </a>
                    </div>
                </div>
             {% else %}
                <div class="locker-form">
                </div>   
             {% endif %}   
            
        </div>
        
        {% if type != 'playerTitle' %}
            <div class="list-items">
                {% for i in allItem  %}
                    <a class="item" href="/locker/{{lockerId}}/{{i.getId()}}">
                        <img src="{{i.getItem().getDisplayIcon()}}">
                    </a>
                {% endfor %}
            
            </div>
        {% endif %}
        
    
</main>

<img src="https://trackercdn.com/cdn/tracker.gg/premium/pattern-poly.png?v=2" alt="" class="main-title-detail-bg">
{% endblock %}
